:scss 
  .sign_up{
    padding-top: 5rem
    }

.container.sign_up
  .row
    .col-md-10
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        %table.table.table-separated.sign-up-field
          %tr 
            %td= f.label :name
            %td= f.text_field :name, autofocus: true
          %tr
            %td= f.label :email
            %td= f.email_field :email
          %tr
            %td= f.label :password
            %td= f.password_field :password, autocomplete: "off"
          %tr
            %td= f.label :password_confirmation
            %td= f.password_field :password_confirmation, autocomplete: "off"
        %button.btn.btn-default= f.submit "Sign up"
        %button.btn.btn-default= render "devise/shared/links"
      
