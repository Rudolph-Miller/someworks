.container
  .row
    .col-md-10
      %ul.nav.nav-tabs
        %li= link_to 'tasks', editors_tasks_path
        %li.active= link_to 'assigned tasks', editors_assigned_tasks_path
      %h1 AssignedTasks
      %table.table.table-striped.table-bodered
        %thead
          %tr
            %th id
            %th title
            %th description
            %th start
            %th end
            %th number
            %th reward
        %tbody
          -@tasks.each do |task|
            %tr
              %td= task.id
              %td= task.title
              %td= task.description
              %td= task.start_date
              %td= task.end_date
              %td= task.number
              %td= task.reward
              %td= link_to 'show', editors_tasks_show_path(:id => task[:id])
              %td= link_to 'unassign', editors_assigned_tasks_unassign_path(:id => task[:id]), :method => :post
