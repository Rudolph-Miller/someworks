%div.container
  %div.row
    = form_for @task, :url=>{:action => 'create', :controller => 'tasks'}  do |t|
      %div.col-md-8
        %table.table
          %tr
            %td Title
            %td= t.text_field:title
            %br
          %tr
            %td Description
            %td= t.text_area:description, :col=>'20', :rows=>'5'
            %br
          %tr
            %td StartDate
            %td= t.date_select:start_date
            %br
          %tr
            %td EndDate
            %td= t.date_select:end_date
            %br
          %tr
            %td Reward
            %td= t.number_field:reward
            %br
          %tr
            %td Number
            %td= t.number_field:number
            %br
      %div.col-md-2
        %ul.nav.nav-stacked
          %li= t.submit 'create'
          %li= link_to 'cancel', '/publishers/tasks'
