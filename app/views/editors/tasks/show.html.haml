%h1= @task[:title]
%table
  %body
    - @task.attribute_names.each do |key|
      %tr
        %td= key
        - if key != "status"
          %td= @task[key] 
        - else 
          %td= @task.status
    %td Assinged?
    - if @task.assigned?
      %td Assigned!
    - else
      %td Unassinged!
= link_to 'back', '/editors/tasks'
-unless @task.assigned?
  = link_to 'assign', :controller => 'tasks', :action => 'assign', :id => @task[:id]
