:scss
  #task_description_space {
    display: block;
    border-style: inset;
    border-width: 1px;
    overflow: hidden;
    }
%div.container
  %div.row
    %div.col-md-10
      %ul.nav.nav-tabs
        %li.btn= link_to 'back', writers_articles_path
        %li.btn= link_to 'Create Article', writers_articles_new_path(:assigned_task_id => @task.assigned_task.id)
      %h1= @task.title
      %label Due
      = @task.end_date.strftime("%m月%d日 %H:%M")
      %br
      %label 報酬
      = @task.reward
      %br
      %label 本数
      = @task.number
      %textarea#task_description(style="display: none;")= @task.description
      #task_description_space
:coffee
  $("#task_description_space").html(marked($("#task_description").html()))
